{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "outDir": "./dist",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2016",
            "esnext.asynciterable"
        ],
        "typeRoots": [
            "node_modules/@types/graphql"
        ],
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@App/*": [
                "src/*"
            ],
            "lib/*": [
                "common/*"
            ]
        }
    },
    "include": [
        "./src/**/*",
        "tests"
    ],
    "exclude": [
        "./node_modules",
        ".serverless",
        ".webpack"
    ]
}